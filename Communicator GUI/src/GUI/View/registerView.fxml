<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GUI.Controllers.RegisterController"
            prefHeight="400.0"
            prefWidth="600.0">
    <AnchorPane prefWidth="300.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.topAnchor="0.0"
                AnchorPane.bottomAnchor="0.0">
        <Label text="Welcome"
               layoutX="95.0"
               layoutY="100.0">
            <font>
                <Font name="Segoe UI"
                      size="38.0"/>
            </font>
        </Label>
        <Label text="to communicator"
               layoutX="100.0"
               layoutY="150.0">
            <font>
                <Font name="Segoe UI"
                      size="20.0"/>
            </font>
        </Label>
        <Label fx:id="signupMessage"
               text="Already have an account?"
               layoutX="33.0"
               layoutY="250.0">
            <font>
                <Font name="Segoe UI"
                      size="24.0"/>
            </font>
        </Label>
        <Button fx:id="loginButton"
                text="Log In"
                layoutX="100.0"
                layoutY="300.0"
                onAction="#onLoginAction"
                prefWidth="160.0">
            <font>
                <Font name="Segoe UI"
                      size="30.0"/>
            </font>
        </Button>
        <Label text="Author:"
               layoutX="10.0"
               AnchorPane.bottomAnchor="15.0">
            <font>
                <Font name="Segoe UI"
                      size="14.0"/>
            </font>
        </Label>
        <Label text="Kamil BaÅ‚aban"
               layoutX="60.0"
               AnchorPane.bottomAnchor="15.0">
            <font>
                <Font name="Segoe UI"
                      size="14.0"/>
            </font>
        </Label>
    </AnchorPane>
    <GridPane AnchorPane.leftAnchor="300.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              alignment="CENTER">
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Sign Up"
                   BorderPane.alignment="TOP_CENTER"
                   style="-fx-padding: 0 0 60 0;">
                <font>
                    <Font name="Segoe UI"
                          size="36.0"/>
                </font>
            </Label>
            <VBox alignment="CENTER_RIGHT" spacing="10.0">
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <Label text="username:">
                        <font>
                            <Font name="Segoe UI"
                                  size="24.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="loginTextField" promptText="username">
                        <font>
                            <Font name="Segoe UI"
                                  size="20.0"/>
                        </font>
                    </TextField>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <Label text="email:">
                        <font>
                            <Font name="Segoe UI"
                                  size="24.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="emailTextField" promptText="email">
                        <font>
                            <Font name="Segoe UI"
                                  size="20.0"/>
                        </font>
                    </TextField>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <Label text="password:">
                        <font>
                            <Font name="Segoe UI"
                                  size="24.0"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordTextField1" promptText="password">
                        <font>
                            <Font name="Segoe UI"
                                  size="20.0"/>
                        </font>
                    </PasswordField>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <Label text="repeat password:">
                        <font>
                            <Font name="Segoe UI"
                                  size="24.0"/>
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordTextField2" promptText="password">
                        <font>
                            <Font name="Segoe UI"
                                  size="20.0"/>
                        </font>
                    </PasswordField>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <Label text="name:">
                        <font>
                            <Font name="Segoe UI"
                                  size="24.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="nameTextField" promptText="name">
                        <font>
                            <Font name="Segoe UI"
                                  size="20.0"/>
                        </font>
                    </TextField>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <Label text="surname:">
                        <font>
                            <Font name="Segoe UI"
                                  size="24.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="surnameTextField" promptText="surname">
                        <font>
                            <Font name="Segoe UI"
                                  size="20.0"/>
                        </font>
                    </TextField>
                </HBox>
            </VBox>
            <Button text="Sign Up"
                    prefWidth="100.0"
                    prefHeight="40.0"
                    onAction="#onSignupAction">
                <font>
                    <Font name="Segoe UI"
                          size="20.0"/>
                </font>
            </Button>
        </VBox>
    </GridPane>
</AnchorPane>
